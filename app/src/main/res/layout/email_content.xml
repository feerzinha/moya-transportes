<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:id="@+id/email_layout"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".MainActivity">

        <TextView
                android:text="@string/txt_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_client"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"/>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_client"
                app:layout_constraintStart_toEndOf="@+id/txt_client"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="@string/txt_email_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_email"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_client"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:textSize="16sp"/>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_email"
                app:layout_constraintStart_toEndOf="@+id/txt_email"
                android:layout_marginStart="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_client"
                app:layout_constraintHorizontal_bias="0.2"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="131dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/etx_route"
                android:autofillHints=""
                android:hint="@string/hint_route"
                tools:targetApi="o"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_email"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/etx_obs"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:autofillHints=""
                android:hint="@string/hint_obs"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/etx_route"
                tools:targetApi="o"/>

        <Button
                android:text="@string/btn_enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
                android:backgroundTint="@color/colorPrimary"
                android:id="@+id/btn_enviar"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/etx_obs"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/btn_add_store"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/add_icon"
                android:background="@android:color/transparent"
                android:layout_marginEnd="32dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/etx_route"
                android:layout_marginStart="2dp"
                app:layout_constraintTop_toTopOf="@+id/etx_route"
                app:layout_constraintBottom_toBottomOf="@+id/etx_route"
                android:contentDescription="@string/add_store_image"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.494"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>